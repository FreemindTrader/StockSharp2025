<controls:BaseStudioControl x:Class="StockSharp.Studio.Controls.CompositeSecurityPanel"
                            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                            xmlns:loc="clr-namespace:StockSharp.Localization;assembly=StockSharp.Localization"
                            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                            xmlns:controls="clr-namespace:StockSharp.Studio.Controls"
                            xmlns:xaml="http://schemas.stocksharp.com/xaml"
                            xmlns:dxdo="http://schemas.devexpress.com/winfx/2008/xaml/docking">
  <UIElement.CommandBindings>
    <CommandBinding Executed="ExecutedSaveSecurityCommand" CanExecute="CanExecuteSaveSecurityCommand"
                    Command="{x:Static controls:CompositeSecurityPanel.SaveSecurityCommand}"/>
    <CommandBinding Executed="ExecutedDrawSecurityCommand" CanExecute="CanExecuteDrawSecurityCommand"
                    Command="{x:Static controls:CompositeSecurityPanel.DrawSecurityCommand}"/>
  </UIElement.CommandBindings>
  <dxdo:DockLayoutManager x:Name="DockingManager" DockingStyle="VS2010">
    <dxdo:LayoutGroup Name="Root">
      <dxdo:LayoutGroup Orientation="Vertical">
        <dxdo:LayoutGroup Orientation="Horizontal">
          <dxdo:LayoutPanel x:Name="IndexSecurityWindow" Caption="{x:Static loc:LocalizedStrings.ContinuousSecurity}"
                            AllowClose="False">
            <Border x:Name="InputBorder" BorderThickness="2" BorderBrush="{x:Null}">
              <FrameworkElement.ToolTip>
                <ToolTip>
                  <TextBlock Text=""/>
                </ToolTip>
              </FrameworkElement.ToolTip>
            </Border>
          </dxdo:LayoutPanel>
          <dxdo:LayoutPanel x:Name="SecuritiesWindow" Caption="{x:Static loc:LocalizedStrings.Securities}" AllowClose="False">
            <xaml:SecurityPicker SecurityDoubleClick="SecurityPicker_OnSecurityDoubleClick" MouseDown="SecurityPicker_OnMouseDown"
                                 x:Name="SecurityPicker" SelectionMode="Row" ShowCommonStatColumns="False"/>
          </dxdo:LayoutPanel>
        </dxdo:LayoutGroup>
        <dxdo:LayoutPanel x:Name="ChartWindow" Caption="{x:Static loc:LocalizedStrings.Str3200}" AllowClose="False">
          <xaml:ChartPanel x:Name="ChartPanel"/>
        </dxdo:LayoutPanel>
      </dxdo:LayoutGroup>
    </dxdo:LayoutGroup>
  </dxdo:DockLayoutManager>
</controls:BaseStudioControl>