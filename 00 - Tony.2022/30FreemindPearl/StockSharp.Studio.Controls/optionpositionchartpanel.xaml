<controls:BaseStudioControl x:Class="StockSharp.Studio.Controls.OptionPositionChartPanel"
                            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                            xmlns:controls="clr-namespace:StockSharp.Studio.Controls"
                            xmlns:charting="http://schemas.stocksharp.com/xaml">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="5"/>
      <RowDefinition MinHeight="100"/>
    </Grid.RowDefinitions>
    <controls:OptionFilterPanel x:Name="FilterPanel" UnderlyingAssetChanged="FilterPanel_OnUnderlyingAssetChanged"
                                FilterChanged="FilterPanel_OnFilterChanged"
                                UseBlackModelChanged="FilterPanel_OnUseBlackModelChanged"
                                OptionsChanged="FilterPanel_OnOptionsChanged" SecurityChanged="FilterPanel_OnSecurityChanged"
                                Grid.Row="0"/>
    <charting:OptionPositionChart x:Name="PosChart" Grid.Row="2"/>
  </Grid>
</controls:BaseStudioControl>