<dx:ThemedWindow x:Class="StockSharp.Studio.Controls.FileProgressWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                 xmlns:loc="clr-namespace:StockSharp.Localization;assembly=StockSharp.Localization"
                 Loaded="FileProgressWindow_OnLoaded" Closing="FileProgressWindow_OnClosing"
                 Title="{x:Static loc:LocalizedStrings.Str1574}" SizeToContent="Height" ShowInTaskbar="False"
                 ResizeMode="NoResize" Width="300" WindowStartupLocation="CenterOwner">
  <Grid Margin="5">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="5"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    <ProgressBar x:Name="Progress" Grid.Row="0" Height="40"/>
    <TextBlock x:Name="ProgressText" Grid.Row="0" Text="0/0" Foreground="Black" HorizontalAlignment="Center"
               VerticalAlignment="Center"/>
    <dx:SimpleButton Click="Cancel_OnClick" Grid.Row="2" Content="{x:Static loc:LocalizedStrings.Cancel}" Width="100"
                     HorizontalAlignment="Right"/>
  </Grid>
</dx:ThemedWindow>