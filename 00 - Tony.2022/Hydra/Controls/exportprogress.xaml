<StatusBar x:Class="StockSharp.Hydra.Controls.ExportProgress"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
           xmlns:loc="clr-namespace:StockSharp.Localization;assembly=StockSharp.Localization"
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
           xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
           MinHeight="27">
  <StatusBarItem x:Name="StatusTextPanel" Visibility="Collapsed">
    <TextBlock x:Name="StatusText" Foreground="Red" FontWeight="Bold"/>
  </StatusBarItem>
  <StatusBarItem x:Name="ProgressBarPanel" Visibility="Collapsed" Padding="0">
    <StackPanel Orientation="Horizontal">
      <ProgressBar x:Name="ProgressBar" Value="0" Width="200" Height="18" Margin="3,0,0,0"/>
      <TextBlock x:Name="ProgressText" Margin="5,0,0,0" Padding="3">
        <TextBlock Text="{x:Static loc:LocalizedStrings.XamlStr87}"/>
      </TextBlock>
      <dx:SimpleButton Click="StopBtn_Click" x:Name="StopBtn" Content="{x:Static loc:LocalizedStrings.Str242}"
                       Margin="5,0,0,0" Width="70" Visibility="Collapsed"/>
    </StackPanel>
  </StatusBarItem>
  <StatusBarItem x:Name="OpenFilePanel" Visibility="Collapsed">
    <dx:SimpleButton Click="OpenFileBtn_OnClick" x:Name="OpenFileBtn" Width="150">
      <TextBlock x:Name="OpenFileTitle"/>
    </dx:SimpleButton>
  </StatusBarItem>
</StatusBar>