<studio:BaseStudioControl x:Class="StockSharp.Hydra.Panes.ChartPane"
                          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                          xmlns:loc="clr-namespace:StockSharp.Localization;assembly=StockSharp.Localization"
                          xmlns:sx="http://schemas.stocksharp.com/xaml"
                          xmlns:studio="clr-namespace:StockSharp.Studio.Controls;assembly=StockSharp.Studio.Controls"
                          xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core">
  <Grid Margin="5">
    <sx:ChartPanel x:Name="ChartPanel" AllowAddOrders="False" AllowAddOwnTrades="False"/>
    <dx:SimpleButton x:Name="CancelButton" Content="{x:Static loc:LocalizedStrings.XamlStr425}" VerticalAlignment="Top"
                     HorizontalAlignment="Center" Margin="0,35,0,0" Visibility="Collapsed"/>
  </Grid>
</studio:BaseStudioControl>