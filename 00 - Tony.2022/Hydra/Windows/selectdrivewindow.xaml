<dx:ThemedWindow x:Class="StockSharp.Hydra.Windows.SelectDriveWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:loc="clr-namespace:StockSharp.Localization;assembly=StockSharp.Localization"
                 xmlns:xaml="clr-namespace:Ecng.Xaml;assembly=StockSharp.Xaml"
                 xmlns:controls="clr-namespace:StockSharp.Hydra.Controls"
                 xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                 Title="{x:Static loc:LocalizedStrings.SelectDestination}" ShowInTaskbar="False"
                 SizeToContent="Height" Width="300" WindowStartupLocation="CenterOwner">
  <Grid Margin="5">
    <Grid.RowDefinitions>
      <RowDefinition/>
      <RowDefinition Height="5"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    <controls:DrivePanel x:Name="DrivePanel" SelectedDriveChanged="DrivePanel_OnSelectedDriveChanged"/>
    <dx:SimpleButton x:Name="OkBtn" IsEnabled="False" Grid.Row="2" Content="{x:Static loc:LocalizedStrings.OK}" Width="80"
                     IsDefault="True" xaml:XamlHelper.DialogResult="True"/>
  </Grid>
</dx:ThemedWindow>