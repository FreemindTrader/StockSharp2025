<dx:ThemedWindow x:Class="StockSharp.Hydra.Windows.EraseDataWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:loc="clr-namespace:StockSharp.Localization;assembly=StockSharp.Localization"
                 xmlns:controls="clr-namespace:StockSharp.Hydra.Controls"
                 xmlns:xaml="http://schemas.stocksharp.com/xaml"
                 xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
                 xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                 xmlns:converters="clr-namespace:Ecng.Xaml.Converters;assembly=StockSharp.Xaml"
                 xmlns:ex="clr-namespace:Ecng.Xaml;assembly=StockSharp.Xaml"
                 Title="{x:Static loc:LocalizedStrings.XamlStr781}" ResizeMode="NoResize" ShowInTaskbar="False"
                 SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner"
                 xaml:Doc.Url="45cc9b3a-117c-4567-94af-fea13087ebe9.htm">
  <FrameworkElement.Resources>
    <converters:InverseBooleanConverter x:Key="Invbool"/>
  </FrameworkElement.Resources>
  <Grid Margin="5" HorizontalAlignment="Left" VerticalAlignment="Top">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="140"/>
      <ColumnDefinition Width="5"/>
      <ColumnDefinition Width="140"/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="5"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="5"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="5"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="5"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    <Grid ColumnSpan="3" Column="0" Row="0">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto"/>
        <ColumnDefinition Width="5"/>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="5"/>
        <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>
      <CheckBox Click="AllDates_Click" x:Name="AllDates" Content="{x:Static loc:LocalizedStrings.Str1569}"
                Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center"/>
      <dxe:DateEdit x:Name="From" Grid.Column="2" BorderThickness="0" HorizontalContentAlignment="Center"
                    IsEnabled="{Binding IsChecked, ElementName=AllDates, Converter={StaticResource Invbool}}"/>
      <dxe:DateEdit x:Name="To" Grid.Column="4" BorderThickness="0" HorizontalContentAlignment="Center"
                    IsEnabled="{Binding IsChecked, ElementName=AllDates, Converter={StaticResource Invbool}}"/>
    </Grid>
    <Grid ColumnSpan="3" Column="0" Row="2">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto"/>
        <ColumnDefinition Width="5"/>
        <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>
      <CheckBox Click="AllSecurities_Click" x:Name="AllSecurities" Content="{x:Static loc:LocalizedStrings.Str1569}"
                Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center"/>
      <controls:SecurityPickerButton x:Name="SelectSecurityBtn" SecuritySelected="SelectSecurityBtn_SecuritySelected" Grid.Column="2"
                                     IsEnabled="{Binding IsChecked, ElementName=AllSecurities, Converter={StaticResource Invbool}}"/>
    </Grid>
    <Grid ColumnSpan="3" Column="0" Row="4">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto"/>
        <ColumnDefinition Width="5"/>
        <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>
      <CheckBox Click="AllDrives_Click" x:Name="AllDrives" Content="{x:Static loc:LocalizedStrings.Str1569}"
                HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="0" IsChecked="True"/>
      <xaml:DriveComboBox EditValueChanged="Drive_OnSelectionChanged" x:Name="Drive" Grid.Column="2"
                          IsEnabled="{Binding IsChecked, ElementName=AllDrives, Converter={StaticResource Invbool}}"/>
    </Grid>
    <Grid ColumnSpan="3" Column="0" Row="6">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="100"/>
        <ColumnDefinition Width="5"/>
        <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>
      <ex:ComboBoxEditEx EditValueChanged="DataTypeComboBox_EditValueChanged" x:Name="DataTypeComboBox" IsNullable="True"
                         SelectedIndex="0"/>
      <xaml:CandleSettingsEditor x:Name="CandleSettings" Grid.Column="2" Visibility="Collapsed"/>
    </Grid>
    <Grid ColumnSpan="3" Column="0" Row="8">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="100"/>
        <ColumnDefinition Width="5"/>
        <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>
      <dx:SimpleButton Click="Erase_Click" x:Name="Erase" Content="{x:Static loc:LocalizedStrings.Str2060}"
                       ToolTip="{x:Static loc:LocalizedStrings.XamlStr785}" IsEnabled="False"/>
      <ProgressBar x:Name="Progress" Grid.Column="2"/>
    </Grid>
  </Grid>
</dx:ThemedWindow>