<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:s="http://schemas.abtsoftware.co.uk/scichart"    
    xmlns:sx="clr-namespace:fx.Charting" xmlns:converters="clr-namespace:Ecng.Xaml.Converters;assembly=StockSharp.Xaml">

    <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    <DataTemplate x:Key="CursorTooltipTemplate" DataType="s:OhlcSeriesInfo">
        <StackPanel
            Background="Black"
            Opacity="1"
            Orientation="Vertical">
            <TextBlock FontSize="12" Foreground="White">
                <Run FontWeight="Bold" Text="Index: " />
                <Run FontWeight="Normal" Text="{Binding PointMetadata.BarIndex, Mode=OneWay}" />
            </TextBlock>
            <Separator Height="8" Background="Transparent" />
            <TextBlock FontSize="12" Foreground="White">
                <Run FontWeight="Bold" Text="High: " />
                <Run FontWeight="Normal" Text="{Binding PointMetadata.HighPrice, StringFormat='{}{0:0.00000}', Mode=OneWay}" />
            </TextBlock>
            <TextBlock FontSize="12" Foreground="White">
                <Run FontWeight="Bold" Text="Low:" />
                <Run FontWeight="Normal" Text="{Binding PointMetadata.LowPrice, StringFormat='{}{0:0.00000}', Mode=OneWay}" />
            </TextBlock>
            <TextBlock FontSize="12" Foreground="White">
                <Run FontWeight="Bold" Text="Open: " />
                <Run FontWeight="Normal" Text="{Binding PointMetadata.OpenPrice, StringFormat='{}{0:0.00000}', Mode=OneWay}" />
            </TextBlock>
            <TextBlock FontSize="12" Foreground="White">
                <Run FontWeight="Bold" Text="Close:" />
                <Run FontWeight="Normal" Text="{Binding PointMetadata.ClosePrice, StringFormat='{}{0:0.00000}', Mode=OneWay}" />
            </TextBlock>
            <Separator Height="8" Background="Transparent" />

            <TextBlock
                FontSize="12"
                Foreground="SkyBlue"
                Visibility="{Binding PointMetadata.HasSignal, Converter={StaticResource BoolToVisibilityConverter}}">
                <Run FontWeight="Bold" Text="Signal:" />
                <Run FontWeight="Normal" Text="{Binding PointMetadata.BarSignal, Mode=OneWay}" />
            </TextBlock>
            <Separator
                Height="8"
                Background="Transparent"
                Visibility="{Binding PointMetadata.HasSignal, Converter={StaticResource BoolToVisibilityConverter}}" />

            <TextBlock
                FontSize="12"
                Foreground="Pink"
                Visibility="{Binding PointMetadata.HasCandleStickPattern, Converter={StaticResource BoolToVisibilityConverter}}">
                <Run FontWeight="Bold" Text="CandleStick:" />
                <Run FontWeight="Normal" Text="{Binding PointMetadata.CandleStickPatten, Mode=OneWay}" />
            </TextBlock>
            <Separator
                Height="8"
                Background="Transparent"
                Visibility="{Binding PointMetadata.HasCandleStickPattern, Converter={StaticResource BoolToVisibilityConverter}}" />


            <TextBlock
                FontSize="12"
                Foreground="LightGoldenrodYellow"
                Visibility="{Binding PointMetadata.HasElliottWave, Converter={StaticResource BoolToVisibilityConverter}}">
                <Run FontWeight="Bold" Text="Elliott Wave:" />
                <Run FontWeight="Normal" Text="{Binding PointMetadata.WaveString, Mode=OneWay}" />
            </TextBlock>
            <Separator
                Height="8"
                Background="Transparent"
                Visibility="{Binding PointMetadata.HasElliottWave, Converter={StaticResource BoolToVisibilityConverter}}" />

            <TextBlock
                FontSize="12"
                Foreground="LightGreen"
                Visibility="{Binding PointMetadata.HasWaveRotation, Converter={StaticResource BoolToVisibilityConverter}}">
                <Run FontWeight="Bold" Text="Wave Rotation:" />
                <Run FontWeight="Normal" Text="{Binding PointMetadata.WaveRotationInfoString, Mode=OneWay}" />
            </TextBlock>
            <Separator
                Height="8"
                Background="Transparent"
                Visibility="{Binding PointMetadata.HasWaveRotation, Converter={StaticResource BoolToVisibilityConverter}}" />


            <TextBlock
                FontSize="12"
                Foreground="LightSalmon"
                Visibility="{Binding PointMetadata.HasBaZi, Converter={StaticResource BoolToVisibilityConverter}}">
                <Run FontWeight="Bold" Text="BaZi:" />
                <Run FontWeight="Normal" Text="{Binding PointMetadata.BaZiString, Mode=OneWay}" />
            </TextBlock>
            <Separator
                Height="8"
                Background="Transparent"
                Visibility="{Binding PointMetadata.HasBaZi, Converter={StaticResource BoolToVisibilityConverter}}" />

            <TextBlock
                FontSize="12"
                Foreground="LightYellow"
                Visibility="{Binding PointMetadata.HasGannSquare, Converter={StaticResource BoolToVisibilityConverter}}">
                <Run FontWeight="Bold" Text="Gann Square:" />
                <Run FontWeight="Normal" Text="{Binding PointMetadata.GannSquareInfoString, Mode=OneWay}" />
            </TextBlock>
            <Separator
                Height="8"
                Background="Transparent"
                Visibility="{Binding PointMetadata.HasGannSquare, Converter={StaticResource BoolToVisibilityConverter}}" />

            <TextBlock
                FontSize="12"
                Foreground="LightSalmon"
                Visibility="{Binding PointMetadata.HasDivergence, Converter={StaticResource BoolToVisibilityConverter}}">
                <Run FontWeight="Bold" Text="Divergence:" />
                <Run FontWeight="Normal" Text="{Binding PointMetadata.DivergenceInfoString, Mode=OneWay}" />
            </TextBlock>
            <Separator
                Height="8"
                Background="Transparent"
                Visibility="{Binding PointMetadata.HasDivergence, Converter={StaticResource BoolToVisibilityConverter}}" />



            <TextBlock FontSize="12" Foreground="White">
                <Run FontWeight="Bold" Text="New York Time: " />
                <Run FontWeight="Normal" Text="{Binding PointMetadata.NewYorkTime, StringFormat=G, Mode=OneWay}" />
            </TextBlock>
            <TextBlock FontSize="12" Foreground="White">
                <Run FontWeight="Bold" Text="London Time:" />
                <Run FontWeight="Normal" Text="{Binding PointMetadata.LondonTime, StringFormat=G, Mode=OneWay}" />
            </TextBlock>
            <TextBlock FontSize="12" Foreground="White">
                <Run FontWeight="Bold" Text="HK Time: " />
                <Run FontWeight="Normal" Text="{Binding PointMetadata.ChinaTime, StringFormat=G, Mode=OneWay}" />
            </TextBlock>
        </StackPanel>
    </DataTemplate>

    <Style x:Key="PropertyStyles" TargetType="sx:FreemindCandlestickRenderableSeries">
        <Setter Property="s:TooltipModifier.TooltipTemplate" Value="{StaticResource CursorTooltipTemplate}" />
        <Setter Property="s:TooltipModifier.IncludeSeries" Value="True" />
        <Setter Property="s:SeriesValueModifier.IncludeSeries" Value="False" />
    </Style>

    <Style x:Key="GripStyle" TargetType="Thumb">
        <Setter Property="Width" Value="5" />
        <Setter Property="Height" Value="5" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <Ellipse
                        Width="5"
                        Height="5"
                        Stroke="LightGray"
                        StrokeThickness="1" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    

</ResourceDictionary>