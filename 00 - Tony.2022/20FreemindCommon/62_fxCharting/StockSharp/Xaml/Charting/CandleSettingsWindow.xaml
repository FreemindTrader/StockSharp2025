<dx:DXWindow
    x:Class="fx.Charting.CandleSettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sxpg="clr-namespace:StockSharp.Xaml.PropertyGrid;assembly=StockSharp.Xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:loc="clr-namespace:StockSharp.Localization;assembly=StockSharp.Localization"
    
    xmlns:sysXaml="clr-namespace:System.Windows.Markup;assembly=System.Xaml" 
    Title="{x:Static loc:LocalizedStrings.Str1942}"
    Width="400"
    Height="400"
    ShowInTaskbar="false">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="5" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <sxpg:PropertyGridEx
            x:Name="SeriesCtrl"
            Grid.Row="0"
            Grid.Column="0" />
        <Button
            x:Name="OkBtn"
            Grid.Row="2"
            Grid.Column="0"
            Width="100"
            Click="OkButtonClicked"
            IsDefault="true"
            IsEnabled="false">
            <Run Text="{x:Static loc:LocalizedStrings.OK}" />
        </Button>
    </Grid>
</dx:DXWindow>