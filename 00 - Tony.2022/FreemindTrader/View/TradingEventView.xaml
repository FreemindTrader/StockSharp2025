                            <dxg:IconSetFormatCondition FieldName="PsarSignal">
                                <dxc:IconSetFormat
                                    ElementThresholdType="Number"
                                    IconSetType="{x:Null}"
                                    IconVerticalAlignment="Center">
                                    <dxc:IconSetElement
