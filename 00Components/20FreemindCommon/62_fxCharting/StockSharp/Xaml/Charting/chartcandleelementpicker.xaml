<dx:DXWindow
    x:Class="fx.Charting.CandlestickUIPicker"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    
    xmlns:loc="clr-namespace:StockSharp.Localization;assembly=StockSharp.Localization"
    xmlns:local="clr-namespace:fx.Charting"
    xmlns:egXaml="clr-namespace:Ecng.Xaml;assembly=StockSharp.Xaml"
    xmlns:sysXaml="clr-namespace:System.Windows.Markup;assembly=System.Xaml"
    Title="{x:Static loc:LocalizedStrings.SelectCandles}"
    ShowInTaskbar="false"
    SizeToContent="WidthAndHeight">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="5" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ComboBox
            x:Name="ElementsCtrl"
            MinWidth="250"
            DisplayMemberPath="Title"
            SelectionChanged="ElementsCtrl_SelectionChanged" />
        <dx:SimpleButton
            x:Name="Ok"
            Grid.Row="2"
            Width="100"
            egXaml:XamlHelper.DialogResult="True"
            Content="{x:Static loc:LocalizedStrings.OK}"
            IsDefault="true"
            IsEnabled="false" />
    </Grid>
</dx:DXWindow>