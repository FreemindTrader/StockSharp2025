<dx:ThemedWindow x:Class="StockSharp.Studio.Controls.PositionEditWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:sx="http://schemas.stocksharp.com/xaml"
                 xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                 WindowStartupLocation="CenterOwner" ShowInTaskbar="False" Height="450" Width="320"
                 Title="{sx:Localization PortfolioEditing}">
  <Grid Margin="5">
    <Grid.RowDefinitions>
      <RowDefinition/>
      <RowDefinition Height="5"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition/>
      <ColumnDefinition Width="100"/>
      <ColumnDefinition Width="5"/>
      <ColumnDefinition Width="100"/>
    </Grid.ColumnDefinitions>
    <sx:PropertyGridEx x:Name="PropertyGrid" Grid.ColumnSpan="4"/>
    <dx:SimpleButton Grid.Row="2" Grid.Column="1" IsDefault="True" Content="{sx:Localization OK}"/>
    <dx:SimpleButton Grid.Row="2" Grid.Column="3" IsCancel="True" Content="{sx:Localization Cancel}"/>
  </Grid>
</dx:ThemedWindow>