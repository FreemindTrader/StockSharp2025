<dxe:ComboBoxEditSettings x:Class="StockSharp.Studio.Controls.ClientSocialComboBoxEditor"
                          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                          xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
                          xmlns:sx="http://schemas.stocksharp.com/xaml"
                          IsTextEditable="False">
  <dxe:ButtonEditSettings.ButtonTemplate>
    <DataTemplate DataType="{x:Type sx:ComboButtonItem}">
      <dxe:ButtonInfo GlyphKind="{Binding Glyph}" Visibility="{Binding Visibility}" ToolTip="{Binding ToolTip}"
                      Command="{Binding Command}"/>
    </DataTemplate>
  </dxe:ButtonEditSettings.ButtonTemplate>
</dxe:ComboBoxEditSettings>