<dx:ThemedWindow x:Class="StockSharp.Studio.Controls.ClientSocialListWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                 xmlns:local="clr-namespace:StockSharp.Studio.Controls"
                 xmlns:sx="http://schemas.stocksharp.com/xaml"
                 xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
                 xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
                 Loaded="OnLoaded" Height="200" Width="500" WindowStartupLocation="CenterOwner"
                 ShowInTaskbar="False" sx:Doc.Url="topics/telegram_services/alerts.html"
                 Title="{sx:Localization Channels}">
  <FrameworkElement.Resources>
    <dx:ObjectToBooleanConverter x:Key="obj2bool"/>
    <dxmvvm:StringToBooleanConverter x:Key="str2bool"/>
  </FrameworkElement.Resources>
  <UIElement.CommandBindings>
    <CommandBinding Executed="SendCommand_OnExecuted" Command="{x:Static local:ClientSocialListWindow.SendCommand}"/>
  </UIElement.CommandBindings>
  <Grid Margin="5">
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="5"/>
      <RowDefinition Height="24"/>
    </Grid.RowDefinitions>
    <sx:BaseGridControl x:Name="SocialsGrid" Grid.Row="0" SelectionMode="Cell">
      <dxg:GridControl.View>
        <dxg:TableView AllowEditing="False" ShowGroupPanel="False" NavigationStyle="Cell" ShowIndicator="False"/>
      </dxg:GridControl.View>
      <dxg:GridControl.Columns>
        <dxg:GridColumn Width="Auto" FieldName="Id" Header="{sx:Localization Id}"/>
        <dxg:GridColumn Width="*" FieldName="Name" Header="{sx:Localization Name}"/>
        <dxg:GridColumn Width="Auto" Header="{sx:Localization Verify}">
          <dxg:ColumnBase.CellTemplate>
            <DataTemplate>
              <StackPanel HorizontalAlignment="Center" Margin="1">
                <dx:SimpleButton Height="22" Command="{x:Static local:ClientSocialListWindow.SendCommand}"
                                 Glyph="{sx:ThemedIcons Key=Telegram}" CommandParameter="{Binding RowData.Row}"/>
              </StackPanel>
            </DataTemplate>
          </dxg:ColumnBase.CellTemplate>
        </dxg:GridColumn>
      </dxg:GridControl.Columns>
    </sx:BaseGridControl>
    <Grid Row="2">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto"/>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="Auto"/>
      </Grid.ColumnDefinitions>
      <dx:SimpleButton Click="RefreshBtn_Click" Grid.Column="0" Glyph="{sx:ThemedIcons Key=Refresh}"/>
      <dx:SimpleButton Click="RemoveBtn_Click" Grid.Column="2" Glyph="{sx:ThemedIcons Key=Remove2}"
                       IsEnabled="{Binding ElementName=SocialsGrid, Path=SelectedItem, Converter={StaticResource obj2bool}}"/>
    </Grid>
  </Grid>
</dx:ThemedWindow>