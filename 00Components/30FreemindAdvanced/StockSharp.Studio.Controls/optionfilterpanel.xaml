<UserControl x:Class="StockSharp.Studio.Controls.OptionFilterPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:propertyGrid="http://schemas.stocksharp.com/xaml"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
             xmlns:controls="clr-namespace:StockSharp.Studio.Controls"
             xmlns:sx="http://schemas.stocksharp.com/xaml">
  <FrameworkElement.Resources>
    <controls:ExpirDateToStringConverter x:Key="expirConverter"/>
  </FrameworkElement.Resources>
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="5"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="5"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    <Grid>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto"/>
        <ColumnDefinition Width="5"/>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="5"/>
        <ColumnDefinition Width="Auto"/>
        <ColumnDefinition Width="5"/>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="5"/>
        <ColumnDefinition Width="Auto"/>
        <ColumnDefinition Width="5"/>
        <ColumnDefinition Width="Auto"/>
        <ColumnDefinition Width="5"/>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="5"/>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="5"/>
        <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>
      <TextBlock Grid.Column="0" VerticalAlignment="Center">
        <Run Text="{sx:Localization UnderlyingAsset}"/>
        :
      </TextBlock>
      <sx:SecurityEditor EditValueChanged="UnderlyingAssetCtrl_OnSecuritySelected" x:Name="UnderlyingAssetCtrl"
                         Grid.Column="2" ToolTip="{sx:Localization UnderlyingAsset}"/>
      <TextBlock Grid.Column="4" VerticalAlignment="Center">
        <Run Text="{sx:Localization ExpiryDate}"/>
        :
      </TextBlock>
      <dxe:ComboBoxEdit EditValueChanged="OnEditValueChanged" x:Name="ExpiryDateComboCtrl" Grid.Column="6"
                        IsTextEditable="False" DisplayTextConverter="{StaticResource expirConverter}" BorderThickness="0"
                        ToolTip="{sx:Localization FilterForOptions}">
        <dxe:ButtonEdit.Buttons>
          <dxe:ButtonInfo Click="ClearDateButton_Click" GlyphKind="Cancel"/>
        </dxe:ButtonEdit.Buttons>
        <dxe:LookUpEditBase.ItemTemplate>
          <DataTemplate>
            <TextBlock Text="{Binding ., Converter={StaticResource expirConverter}}"/>
          </DataTemplate>
        </dxe:LookUpEditBase.ItemTemplate>
      </dxe:ComboBoxEdit>
      <CheckBox Click="UseBlackModelCtrl_OnClick" x:Name="UseBlackModelCtrl" Grid.Column="8"
                VerticalAlignment="Center">
        <TextBlock Text="{sx:Localization BlackModel}"/>
      </CheckBox>
      <TextBlock Grid.Column="10" VerticalAlignment="Center">
        <Run Text="{sx:Localization StrikeRange}"/>
        :
      </TextBlock>
      <dxe:SpinEdit EditValueChanged="OnEditValueChanged" x:Name="MinStrikeCtrl" IsFloatValue="True" Grid.Column="12"
                    MinValue="0" AllowNullInput="True" ToolTip="{sx:Localization MinStrikeFilter}"/>
      <dxe:SpinEdit EditValueChanged="OnEditValueChanged" x:Name="MaxStrikeCtrl" IsFloatValue="True" Grid.Column="14"
                    MinValue="0" AllowNullInput="True" ToolTip="{sx:Localization MaxStrikeFilter}"/>
      <dx:SimpleButton Click="SelectOptions_OnClick" x:Name="SelectOptions" Grid.Column="16"/>
    </Grid>
    <Grid Row="2">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto"/>
        <ColumnDefinition Width="5"/>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="5"/>
        <ColumnDefinition Width="Auto"/>
        <ColumnDefinition Width="5"/>
        <ColumnDefinition Width="Auto"/>
      </Grid.ColumnDefinitions>
      <Grid.RowDefinitions>
        <RowDefinition Height="*"/>
        <RowDefinition Height="5"/>
        <RowDefinition Height="*"/>
      </Grid.RowDefinitions>
      <TextBlock VerticalAlignment="Center" Grid.Row="0" Grid.Column="0">
        <Run Text="{sx:Localization AssetPrice}"/>
        :
      </TextBlock>
      <Slider ValueChanged="AssetPriceModified_OnValueChanged" x:Name="AssetPriceModified" Grid.Column="2"
              Grid.Row="0" IsSnapToTickEnabled="True" TickPlacement="BottomRight" Minimum="0" Maximum="100"
              ToolTip="{sx:Localization StrikeModifierForAsset}"/>
      <dxe:SpinEdit EditValueChanged="AssetPriceCtrl_OnEditValueChanged" x:Name="AssetPriceCtrl" IsFloatValue="True"
                    Grid.Column="4" Grid.Row="0" MinValue="0" AllowNullInput="True"
                    ToolTip="{sx:Localization UnderlyingAssetPrice}"/>
      <dx:SimpleButton Click="AssetPriceReset_OnClick" x:Name="AssetPriceReset" Grid.Column="6" Grid.Row="0"
                       MinWidth="100" IsEnabled="False" ToolTip="{sx:Localization ResetPriceModification}">
        <TextBlock Text="{sx:Localization Reset}"/>
      </dx:SimpleButton>
      <TextBlock VerticalAlignment="Center" Grid.Row="2" Grid.Column="0">
        <Run Text="{sx:Localization CurrentDate}"/>
        :
      </TextBlock>
      <Slider ValueChanged="CurrentDateModified_OnValueChanged" x:Name="CurrentDateModified" Grid.Column="2"
              Grid.Row="2" IsSnapToTickEnabled="True" TickPlacement="BottomRight" Minimum="0" Maximum="100"
              ToolTip="{sx:Localization CurrentDateModifier}"/>
      <dxe:DateEdit EditValueChanged="CurrentDateCtrl_OnEditValueChanged" x:Name="CurrentDateCtrl" Grid.Column="4"
                    Grid.Row="2" Width="120" AllowNullInput="True" BorderThickness="0"
                    ToolTip="{sx:Localization ModifiedCurrentDate}" NullValue="{x:Null}"/>
      <dx:SimpleButton Click="CurrentDateReset_OnClick" x:Name="CurrentDateReset" Grid.Column="6" Grid.Row="2"
                       MinWidth="100" IsEnabled="False" ToolTip="{sx:Localization ResetCurrentDateModifier}">
        <TextBlock Text="{sx:Localization Reset}"/>
      </dx:SimpleButton>
    </Grid>
  </Grid>
</UserControl>