<controls:BaseStudioControl x:Class="StockSharp.Studio.Controls.NewsPanel"
                            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                            xmlns:sx="http://schemas.stocksharp.com/xaml"
                            xmlns:controls="clr-namespace:StockSharp.Studio.Controls"
                            xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
                            DataContext="{Binding RelativeSource={RelativeSource Self}}">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    <dxb:BarManager x:Name="BarManager" Grid.Row="0">
      <dxb:BarManager.Bars>
        <dxb:Bar Caption="{sx:Localization Main}">
          <dxb:BarCheckItem ToolTipService.ShowOnDisabled="True" ToolTip="{sx:Localization SubscribeNews}"
                            IsChecked="{Binding SubscribeNews}" Glyph="{sx:ThemedIcons Key=Mail}"/>
          <dxb:BarButtonItem ToolTipService.ShowOnDisabled="True" ToolTip="{sx:Localization Search}"
                             Command="{Binding SearchCommand}" Glyph="{sx:ThemedIcons Key=Search}"/>
        </dxb:Bar>
      </dxb:BarManager.Bars>
    </dxb:BarManager>
    <sx:NewsGrid x:Name="NewsGrid" Grid.Row="1"/>
  </Grid>
</controls:BaseStudioControl>