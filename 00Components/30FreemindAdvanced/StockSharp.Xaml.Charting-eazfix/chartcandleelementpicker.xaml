<local:ChartCandleElementPicker xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                xmlns:local="clr-namespace:StockSharp.Xaml.Charting"
                                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                                xmlns:loc="clr-namespace:StockSharp.Xaml;assembly=StockSharp.Xaml"
                                xmlns:egXaml="clr-namespace:Ecng.Xaml;assembly=StockSharp.Xaml"
                                xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                                ShowInTaskbar="False" SizeToContent="WidthAndHeight"
                                Title="{loc:Localization SelectCandles}">
  <Grid Margin="5">
    <Grid.RowDefinitions>
      <RowDefinition/>
      <RowDefinition Height="5"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    <egXaml:ComboBoxEditEx x:Name="ElementsCtrl" MinWidth="250"/>
    <dx:SimpleButton x:Name="Ok" Grid.Row="2" Width="100" IsDefault="true" IsEnabled="False"
                             egXaml:XamlHelper.DialogResult="True" Content="{loc:Localization OK}"/>
  </Grid>
</local:ChartCandleElementPicker>