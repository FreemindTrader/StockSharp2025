<local:OptimizerChart3D xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                        xmlns:local="clr-namespace:StockSharp.Xaml.Charting"
                        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                        xmlns:loc="clr-namespace:StockSharp.Xaml;assembly=StockSharp.Xaml"
                        xmlns:l1l1i="clr-namespace:DevExpress.Xpf.LayoutControl;assembly=DevExpress.Xpf.LayoutControl.v22.1"
                        xmlns:dx="clr-namespace:DevExpress.Xpf.Core;assembly=DevExpress.Xpf.Core.v22.1"
                        xmlns:li1i="clr-namespace:DevExpress.Xpf.Editors;assembly=DevExpress.Xpf.Core.v22.1">
  <FrameworkElement.Resources>
    <ControlTemplate x:Key="Left" TargetType="{x:Type RepeatButton}">
      <Image Height="24" Source="{loc:ThemedIcons Key=Undo}"/>
    </ControlTemplate>
    <ControlTemplate x:Key="Right" TargetType="{x:Type RepeatButton}">
      <Image Height="24" Source="{loc:ThemedIcons Key=Redo}"/>
    </ControlTemplate>
  </FrameworkElement.Resources>
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto" MinWidth="250"/>
      <ColumnDefinition Width="5"/>
      <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="5"/>
        <RowDefinition Height="*"/>
      </Grid.RowDefinitions>
      <l1l1i:GroupBox Grid.Row="0" dx:HeaderedContentControlBase.Header="{loc:Localization Parameters}">
        <Grid>
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="*"/>
          </Grid.ColumnDefinitions>
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="Auto"/>
          </Grid.RowDefinitions>
          <TextBlock Grid.Row="0" Text="X:" VerticalAlignment="Center"/>
          <li1i:ComboBoxEdit x:Name="ValX" Grid.Row="0" Grid.Column="2" IsTextEditable="False" DisplayMember="Name"/>
          <TextBlock Grid.Row="2" Text="Y:" VerticalAlignment="Center"/>
          <li1i:ComboBoxEdit x:Name="ValY" Grid.Row="2" Grid.Column="2" IsTextEditable="False" DisplayMember="Name"/>
          <TextBlock Grid.Row="4" Text="Z:" VerticalAlignment="Center"/>
          <li1i:ComboBoxEdit x:Name="ValZ" Grid.Row="4" Grid.Column="2" IsTextEditable="False"
                             DisplayMember="DisplayName"/>
        </Grid>
      </l1l1i:GroupBox>
      <l1l1i:GroupBox Grid.Row="2" dx:HeaderedContentControlBase.Header="{loc:Localization View}">
        <Grid>
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
          </Grid.ColumnDefinitions>
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="5"/>
            <RowDefinition Height="Auto"/>
          </Grid.RowDefinitions>
          <TextBlock Grid.Row="0" Text="X:" VerticalAlignment="Center"/>
          <RepeatButton Grid.Row="0" Grid.Column="2" Template="{StaticResource Left}"/>
          <RepeatButton Grid.Row="0" Grid.Column="4" Template="{StaticResource Right}"/>
          <TextBlock Grid.Row="2" Text="Y:" VerticalAlignment="Center"/>
          <RepeatButton Grid.Row="2" Grid.Column="2" Template="{StaticResource Left}"/>
          <RepeatButton Grid.Row="2" Grid.Column="4" Template="{StaticResource Right}"/>
          <TextBlock Grid.Row="4" Text="Z:" VerticalAlignment="Center"/>
          <RepeatButton Grid.Row="4" Grid.Column="2" Template="{StaticResource Left}"/>
          <RepeatButton Grid.Row="4" Grid.Column="4" Template="{StaticResource Right}"/>
        </Grid>
      </l1l1i:GroupBox>
    </Grid>
    <local:Chart3D x:Name="Chart" Grid.Column="2"/>
  </Grid>
</local:OptimizerChart3D>