<l1lil:ChartPanel xmlns:l1lil="clr-namespace:StockSharp.Xaml.Charting"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:li11l="clr-namespace:DevExpress.Xpf.Bars;assembly=DevExpress.Xpf.Core.v22.1"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:l1i11ii111="clr-namespace:StockSharp.Xaml;assembly=StockSharp.Xaml"
                  xmlns:ll1="clr-namespace:Ecng.Xaml.Converters;assembly=StockSharp.Xaml"
                  xmlns:s="clr-namespace:-"
                  xmlns:llli1="clr-namespace:DevExpress.Xpf.Editors.Settings;assembly=DevExpress.Xpf.Core.v22.1"
                  xmlns:lll="clr-namespace:Ecng.Xaml;assembly=StockSharp.Xaml"
                  xmlns:dx="clr-namespace:DevExpress.Xpf.Core;assembly=DevExpress.Xpf.Core.v22.1"
                  xmlns:li1111lil="clr-namespace:DevExpress.Xpf.Core.Native;assembly=DevExpress.Xpf.Core.v22.1"
                  xmlns:l11="clr-namespace:DevExpress.Xpf.Bars.Themes;assembly=DevExpress.Xpf.Core.v22.1"
                  xmlns:l1i="clr-namespace:DevExpress.Xpf.Utils.Themes;assembly=DevExpress.Xpf.Core.v22.1"
                  x:Name="Ctrl" li11l:BarNameScope.IsScopeOwner="True">
  <UIElement.CommandBindings>
    <CommandBinding Command="{x:Static l1lil:ChartPanel.RegisterOrderCommand}"/>
    <CommandBinding Command="{x:Static l1lil:ChartPanel.ShareCommand}"/>
    <CommandBinding Command="{x:Static l1i11ii111:RoutedCommands.CancelOrders}"/>
    <CommandBinding Command="{x:Static l1lil:ChartPanel.PatternCommand}"/>
  </UIElement.CommandBindings>
  <FrameworkElement.Resources>
    <Style x:Key="ImgStyle" TargetType="{x:Type Image}">
      <Style.Triggers>
        <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType={x:Type ToggleButton}, AncestorLevel=1}, Path=IsEnabled}"
                     Value="False">
          <Setter Property="UIElement.Opacity" Value="0.3"/>
        </DataTrigger>
      </Style.Triggers>
    </Style>
    <ll1:EnumBooleanConverter x:Key="EnumBooleanConverter" DefaultValueWhenUnchecked="True"/>
    <ll1:VisibilityToBoolConverter x:Key="VisToBool"/>
    <l1lil:ChartTimeFrameNameConverter x:Key="TimeFrame2Name"/>
  </FrameworkElement.Resources>
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition/>
    </Grid.RowDefinitions>
    <l1i11ii111:QuickOrderPanel x:Name="QuickOrderPanel" Grid.Row="1" Width="400" Height="45" Visibility="Collapsed"
                                Panel.ZIndex="100" HorizontalAlignment="Left" VerticalAlignment="Top"/>
    <li11l:BarManager x:Name="BarManager" Grid.Row="0">
      <li11l:BarManager.Bars>
        <li11l:Bar>
          <li11l:BarSplitButtonItem ActAsDropDown="True" ToolTipService.ShowOnDisabled="True"
                                    ToolTip="{l1i11ii111:Localization AddPanel}" IsEnabled="{Binding IsInteracted, ElementName=Chart}"
                                    Glyph="{l1i11ii111:ThemedIcons Key=Add}">
            <li11l:BarSplitButtonItem.PopupControl>
              <s:dje_zHRCSWK4ZNLJHREKZYGF3XQ6G3FQDVTLXGBGA7V24_ejd DataContext="{Binding DataContext, ElementName=Chart}"/>
            </li11l:BarSplitButtonItem.PopupControl>
          </li11l:BarSplitButtonItem>
          <li11l:BarEditItem x:Name="CandleStyles" EditWidth="120">
            <li11l:BarEditItem.EditSettings>
              <llli1:ComboBoxEditSettings x:Name="CandleStylesSettings" IsTextEditable="False" ApplyItemTemplateToSelectedItem="True">
                <llli1:LookUpEditSettingsBase.ItemTemplate>
                  <DataTemplate>
                    <Border Background="Transparent">
                      <StackPanel Orientation="Horizontal">
                        <Image Width="16" Height="16" Source="{lll:ThemedIconBinding Path=Image}"/>
                        <TextBlock Margin="5,0,0,0" VerticalAlignment="Center" Text="{Binding Path=Name}"/>
                      </StackPanel>
                    </Border>
                  </DataTemplate>
                </llli1:LookUpEditSettingsBase.ItemTemplate>
              </llli1:ComboBoxEditSettings>
            </li11l:BarEditItem.EditSettings>
          </li11l:BarEditItem>
          <li11l:BarEditItem x:Name="TfSelector" EditWidth="65" IsEnabled="{Binding IsInteracted, ElementName=Chart}">
            <li11l:BarEditItem.EditSettings>
              <llli1:ComboBoxEditSettings x:Name="_tfSelectorCb" IsTextEditable="False" ApplyItemTemplateToSelectedItem="True">
                <llli1:LookUpEditSettingsBase.ItemTemplate>
                  <DataTemplate>
                    <Border Background="Transparent" Margin="5,0">
                      <TextBlock VerticalAlignment="Center" Text="{Binding Path=., Converter={StaticResource TimeFrame2Name}}"/>
                    </Border>
                  </DataTemplate>
                </llli1:LookUpEditSettingsBase.ItemTemplate>
              </llli1:ComboBoxEditSettings>
            </li11l:BarEditItem.EditSettings>
          </li11l:BarEditItem>
          <li11l:BarItemSeparator/>
          <li11l:BarCheckItem ToolTipService.ShowOnDisabled="True" Content="{l1i11ii111:Localization AutoScroll}"
                              ToolTip="{l1i11ii111:Localization AutoScroll}"
                              IsChecked="{Binding ElementName=Chart, Path=IsAutoScroll}"
                              Glyph="{l1i11ii111:ThemedIcons Key=Scroll}"/>
          <li11l:BarCheckItem ToolTipService.ShowOnDisabled="True" Content="{l1i11ii111:Localization AutoScaling}"
                              ToolTip="{l1i11ii111:Localization AutoScaling}"
                              IsChecked="{Binding ElementName=Chart, Path=AutoRangeByAnnotations}"
                              Glyph="{l1i11ii111:ThemedIcons Key=UpDown}"/>
          <li11l:BarCheckItem ToolTipService.ShowOnDisabled="True" Content="{l1i11ii111:Localization Legend}"
                              ToolTip="{l1i11ii111:Localization Legend}" IsChecked="{Binding ElementName=Chart, Path=ShowLegend}"
                              Glyph="{l1i11ii111:ThemedIcons Key=List}"/>
          <li11l:BarCheckItem ToolTipService.ShowOnDisabled="True" Content="{l1i11ii111:Localization OverviewArea}"
                              ToolTip="{l1i11ii111:Localization OverviewArea}"
                              IsChecked="{Binding ElementName=Chart, Path=ShowOverview}"
                              Glyph="{l1i11ii111:ThemedIcons Key=Footer}"/>
          <li11l:BarCheckItem ToolTipService.ShowOnDisabled="True" Content="{l1i11ii111:Localization ShowCross}"
                              ToolTip="{l1i11ii111:Localization ShowCross}"
                              IsChecked="{Binding ElementName=Chart, Path=CrossHair}"
                              Glyph="{l1i11ii111:ThemedIcons Key=Crosshair}"/>
          <li11l:BarCheckItem ToolTipService.ShowOnDisabled="True" Content="{l1i11ii111:Localization ShowTooltip}"
                              ToolTip="{l1i11ii111:Localization ShowTooltip}"
                              IsChecked="{Binding ElementName=Chart, Path=CrossHairTooltip}"
                              IsEnabled="{Binding ElementName=Chart, Path=CrossHair}"
                              Glyph="{l1i11ii111:ThemedIcons Key=Tooltip}"/>
          <li11l:BarCheckItem ToolTipService.ShowOnDisabled="True" Content="{l1i11ii111:Localization ShowValuesOnAxis}"
                              ToolTip="{l1i11ii111:Localization ShowValuesOnAxis}"
                              IsChecked="{Binding ElementName=Chart, Path=CrossHairAxisLabels}"
                              IsEnabled="{Binding ElementName=Chart, Path=CrossHair}" Glyph="{l1i11ii111:ThemedIcons Key=Ruler}"/>
          <li11l:BarButtonItem Command="{x:Static l1lil:ChartPanel.PatternCommand}"
                               ToolTip="{l1i11ii111:Localization PatternDesc}" Content="{l1i11ii111:Localization Pattern}"
                               Glyph="{l1i11ii111:ThemedIcons Key=GanttChart}" CommandTarget="{Binding ElementName=Ctrl}"/>
          <li11l:BarItemSeparator/>
          <li11l:BarCheckItem ToolTipService.ShowOnDisabled="True" Content="{l1i11ii111:Localization Line2}"
                              ToolTip="{l1i11ii111:Localization Line2}"
                              IsChecked="{Binding ElementName=Chart, Path=AnnotationType, Converter={StaticResource EnumBooleanConverter}, ConverterParameter=LineAnnotation}"
                              Glyph="{l1i11ii111:ThemedIcons Key=Line}"/>
          <li11l:BarCheckItem ToolTipService.ShowOnDisabled="True" Content="{l1i11ii111:Localization Pointer}"
                              ToolTip="{l1i11ii111:Localization Pointer}"
                              IsChecked="{Binding ElementName=Chart, Path=AnnotationType, Converter={StaticResource EnumBooleanConverter}, ConverterParameter=LineArrowAnnotation}"
                              Glyph="{l1i11ii111:ThemedIcons Key=RightArrowLine}"/>
          <li11l:BarCheckItem ToolTipService.ShowOnDisabled="True" Content="{l1i11ii111:Localization VerLine}"
                              ToolTip="{l1i11ii111:Localization VerLine}"
                              IsChecked="{Binding ElementName=Chart, Path=AnnotationType, Converter={StaticResource EnumBooleanConverter}, ConverterParameter=VerticalLineAnnotation}">
            <li11l:BarItem.GlyphTemplate>
              <DataTemplate>
                <Image Source="{l1i11ii111:ThemedIcons Key=Line}">
                  <UIElement.RenderTransform>
                    <RotateTransform Angle="-45" CenterX="7" CenterY="7"/>
                  </UIElement.RenderTransform>
                </Image>
              </DataTemplate>
            </li11l:BarItem.GlyphTemplate>
          </li11l:BarCheckItem>
          <li11l:BarCheckItem ToolTipService.ShowOnDisabled="True" Content="{l1i11ii111:Localization HorLine}"
                              ToolTip="{l1i11ii111:Localization HorLine}"
                              IsChecked="{Binding ElementName=Chart, Path=AnnotationType, Converter={StaticResource EnumBooleanConverter}, ConverterParameter=HorizontalLineAnnotation}">
            <li11l:BarItem.GlyphTemplate>
              <DataTemplate>
                <Image Source="{l1i11ii111:ThemedIcons Key=Line}">
                  <UIElement.RenderTransform>
                    <RotateTransform Angle="45" CenterX="7" CenterY="7"/>
                  </UIElement.RenderTransform>
                </Image>
              </DataTemplate>
            </li11l:BarItem.GlyphTemplate>
          </li11l:BarCheckItem>
          <li11l:BarCheckItem ToolTipService.ShowOnDisabled="True" Content="{l1i11ii111:Localization Area}"
                              ToolTip="{l1i11ii111:Localization Area}"
                              IsChecked="{Binding ElementName=Chart, Path=AnnotationType, Converter={StaticResource EnumBooleanConverter}, ConverterParameter=BoxAnnotation}"
                              Glyph="{l1i11ii111:ThemedIcons Key=Rectangle}"/>
          <li11l:BarCheckItem ToolTipService.ShowOnDisabled="True" Content="{l1i11ii111:Localization Text}"
                              ToolTip="{l1i11ii111:Localization Text}"
                              IsChecked="{Binding ElementName=Chart, Path=AnnotationType, Converter={StaticResource EnumBooleanConverter}, ConverterParameter=TextAnnotation}"
                              Glyph="{l1i11ii111:ThemedIcons Key=Font}"/>
          <li11l:BarCheckItem ToolTipService.ShowOnDisabled="True" Content="{l1i11ii111:Localization Ruler}"
                              ToolTip="{l1i11ii111:Localization Ruler}"
                              IsChecked="{Binding ElementName=Chart, Path=AnnotationType, Converter={StaticResource EnumBooleanConverter}, ConverterParameter=RulerAnnotation}"
                              Glyph="{l1i11ii111:ThemedIcons Key=Ruler2}"/>
          <li11l:BarCheckItem ToolTipService.ShowOnDisabled="True" Content="{l1i11ii111:Localization ShowFPS}"
                              ToolTip="{l1i11ii111:Localization ShowFPS}"
                              IsChecked="{Binding ElementName=Chart, Path=ShowPerfStats}"
                              Glyph="{l1i11ii111:ThemedIcons Key=Speedometer}"/>
          <li11l:BarItemSeparator/>
          <li11l:BarButtonItem ToolTip="{l1i11ii111:Localization SaveDataFromChart}"
                               Content="{l1i11ii111:Localization SaveDataFromChart}" Glyph="{l1i11ii111:ThemedIcons Key=Save}"/>
          <li11l:BarSplitButtonItem Command="{x:Static l1lil:ChartPanel.ShareCommand}"
                                    ToolTip="{l1i11ii111:Localization ShareImage}" Content="{l1i11ii111:Localization ShareImage}"
                                    CommandTarget="{Binding ElementName=Ctrl}" Glyph="{l1i11ii111:ThemedIcons Key=Share}">
            <li11l:BarSplitButtonItem.PopupControl>
              <li11l:PopupMenu>
                <li11l:PopupMenu.Items>
                  <li11l:BarButtonItem Content="{l1i11ii111:Localization Settings}" Glyph="{l1i11ii111:ThemedIcons Key=Settings}"/>
                </li11l:PopupMenu.Items>
              </li11l:PopupMenu>
            </li11l:BarSplitButtonItem.PopupControl>
          </li11l:BarSplitButtonItem>
          <li11l:BarButtonItem ToolTipService.ShowOnDisabled="True"
                               Command="{Binding DataContext.ShowHiddenAxesCommand, ElementName=Chart}"
                               Content="{l1i11ii111:Localization ShowHiddenAxes}"
                               ToolTip="{l1i11ii111:Localization ShowHiddenAxes}" Glyph="{l1i11ii111:ThemedIcons Key=Footer}"/>
          <li11l:BarItemSeparator/>
          <li11l:BarSplitButtonItem ToolTipService.ShowOnDisabled="True"
                                    Command="{x:Static l1lil:ChartPanel.RegisterOrderCommand}"
                                    DataContext="{Binding ElementName=Chart}" CommandTarget="{Binding ElementName=Ctrl, Mode=OneWay}">
            <li11l:BarItem.SuperTip>
              <dx:SuperTip>
                <dx:SuperTipHeaderItem Content="{l1i11ii111:Localization RegOrdersByClick}"/>
                <dx:SuperTipItem Content="{l1i11ii111:Localization BuyCtrlLeftMouse}"/>
                <dx:SuperTipItem Content="{l1i11ii111:Localization SellCtrlRightMouse}"/>
              </dx:SuperTip>
            </li11l:BarItem.SuperTip>
            <li11l:BarItem.GlyphTemplate>
              <DataTemplate>
                <ToggleButton Margin="-3" Style="{StaticResource {x:Static ToolBar.ToggleButtonStyleKey}}"
                              IsChecked="{Binding Path=OrderCreationMode}">
                  <Image Style="{StaticResource ImgStyle}" Source="{l1i11ii111:ThemedIcons Key=Mouse}">
                    <dx:WpfSvgPalette.Palette>
                      <li1111lil:ThemeResource ThemeKey="{l11:BarSvgPaletteThemeKey ResourceKey=SvgPaletteInBar}"/>
                    </dx:WpfSvgPalette.Palette>
                  </Image>
                </ToggleButton>
              </DataTemplate>
            </li11l:BarItem.GlyphTemplate>
            <li11l:BarSplitButtonItem.PopupControl>
              <li11l:PopupMenu>
                <li11l:PopupMenu.Items>
                  <li11l:BarButtonItem Content="{l1i11ii111:Localization Settings}" Glyph="{l1i11ii111:ThemedIcons Key=Settings}"/>
                </li11l:PopupMenu.Items>
              </li11l:PopupMenu>
            </li11l:BarSplitButtonItem.PopupControl>
          </li11l:BarSplitButtonItem>
          <li11l:BarCheckItem x:Name="QuickOrderPanelButton" ToolTipService.ShowOnDisabled="True"
                              IsChecked="{Binding ElementName=QuickOrderPanel, Path=Visibility, Converter={StaticResource VisToBool}}"
                              Glyph="{l1i11ii111:ThemedIcons Key=Order}" Content="{l1i11ii111:Localization ShowQuickOrdersPanel}"
                              ToolTip="{l1i11ii111:Localization ShowQuickOrdersPanel}"
                              IsEnabled="{Binding IsInteracted, ElementName=Chart}"/>
          <li11l:BarButtonItem Command="{x:Static l1i11ii111:RoutedCommands.CancelOrders}"
                               ToolTipService.ShowOnDisabled="True" Glyph="{l1i11ii111:ThemedIcons Key=Remove2}"
                               CommandTarget="{Binding ElementName=Ctrl}" ToolTip="{l1i11ii111:Localization CancelOrders}"/>
        </li11l:Bar>
      </li11l:BarManager.Bars>
    </li11l:BarManager>
    <l1lil:Chart x:Name="Chart" Grid.Row="1"/>
  </Grid>
</l1lil:ChartPanel>