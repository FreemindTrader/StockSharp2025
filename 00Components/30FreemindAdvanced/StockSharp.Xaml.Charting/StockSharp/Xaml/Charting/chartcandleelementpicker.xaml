<l1lil:ChartCandleElementPicker xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                xmlns:l1lil="clr-namespace:StockSharp.Xaml.Charting"
                                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                                xmlns:loc="clr-namespace:StockSharp.Xaml;assembly=StockSharp.Xaml"
                                xmlns:lll="clr-namespace:Ecng.Xaml;assembly=StockSharp.Xaml"
                                xmlns:dx="clr-namespace:DevExpress.Xpf.Core;assembly=DevExpress.Xpf.Core.v22.1"
                                ShowInTaskbar="False" SizeToContent="WidthAndHeight"
                                Title="{loc:Localization SelectCandles}">
  <Grid Margin="5">
    <Grid.RowDefinitions>
      <RowDefinition/>
      <RowDefinition Height="5"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    <lll:ComboBoxEditEx x:Name="ElementsCtrl" MinWidth="250"/>
    <dx:SimpleButton x:Name="Ok" Grid.Row="2" Width="100" IsDefault="true" IsEnabled="False"
                             lll:XamlHelper.DialogResult="True" Content="{loc:Localization OK}"/>
  </Grid>
</l1lil:ChartCandleElementPicker>