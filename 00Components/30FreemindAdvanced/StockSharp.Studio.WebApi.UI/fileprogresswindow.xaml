<dx:ThemedWindow x:Class="StockSharp.Studio.Controls.FileProgressWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                 xmlns:sx="http://schemas.stocksharp.com/xaml"
                 Loaded="FileProgressWindow_OnLoaded" Closing="FileProgressWindow_OnClosing" SizeToContent="Height"
                 ShowInTaskbar="False" ResizeMode="NoResize" Width="300" WindowStartupLocation="CenterOwner"
                 Title="{sx:Localization FileLoading}">
  <Grid Margin="5">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="5"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    <ProgressBar x:Name="Progress" Grid.Row="0" Height="40"/>
    <TextBlock x:Name="ProgressText" Grid.Row="0" Text="0/0" Foreground="Black" HorizontalAlignment="Center"
               VerticalAlignment="Center"/>
    <dx:SimpleButton Click="Cancel_OnClick" Grid.Row="2" Width="100" HorizontalAlignment="Right"
                     Content="{sx:Localization Cancel}"/>
  </Grid>
</dx:ThemedWindow>