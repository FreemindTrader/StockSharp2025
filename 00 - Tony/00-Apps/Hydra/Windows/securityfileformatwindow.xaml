<dx:ThemedWindow x:Class="StockSharp.Hydra.Windows.SecurityFileFormatWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                 xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
                 xmlns:ex="clr-namespace:Ecng.Xaml;assembly=StockSharp.Xaml"
                 xmlns:loc="clr-namespace:StockSharp.Localization;assembly=StockSharp.Localization"
                 Title="{x:Static loc:LocalizedStrings.FileNameFormat}" SizeToContent="Height" ResizeMode="NoResize"
                 Width="400" ShowInTaskbar="False" WindowStartupLocation="CenterOwner">
  <Grid Margin="5">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="5"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="5"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    <dxe:TextEdit EditValueChanged="FileFormatCtrl_OnEditValueChanged" x:Name="FileFormatCtrl" Grid.Row="0"/>
    <dxe:TextEdit x:Name="PreviewCtrl" Grid.Row="2" IsReadOnly="True"/>
    <dx:SimpleButton x:Name="OkBtn" Grid.Row="4" IsDefault="True" ex:XamlHelper.DialogResult="True" IsEnabled="False"
                     Content="{x:Static loc:LocalizedStrings.OK}"/>
  </Grid>
</dx:ThemedWindow>