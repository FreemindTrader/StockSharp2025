<local:BaseStudioControl x:Class="StockSharp.Studio.Controls.ScalpingMarketDepthControl"
                         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                         xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                         xmlns:local="clr-namespace:StockSharp.Studio.Controls"
                         xmlns:sx="http://schemas.stocksharp.com/xaml"
                         DataContext="{Binding RelativeSource={RelativeSource Self}}">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    <sx:MarketDepthControl x:Name="MdControl" Grid.Row="0" AutoUpdateFormat="False"
                           MaxDepth="{Binding ElementName=BuySellPanel, Path=Settings.Depth}"
                           IsBidsOnTop="{Binding ElementName=BuySellPanel, Path=Settings.IsBidsOnTop}"
                           ShowBoardColumn="{Binding ElementName=BuySellPanel, Path=Settings.ShowBoardColumn, Mode=TwoWay}"
                           PriceTextFormat="{Binding ElementName=BuySellPanel, Path=Settings.PriceTextFormat, Mode=TwoWay}"
                           VolumeTextFormat="{Binding ElementName=BuySellPanel, Path=Settings.VolumeTextFormat, Mode=TwoWay}"/>
    <local:BuySellPanel x:Name="BuySellPanel" Grid.Row="1" Grid.ColumnSpan="2"/>
  </Grid>
</local:BaseStudioControl>