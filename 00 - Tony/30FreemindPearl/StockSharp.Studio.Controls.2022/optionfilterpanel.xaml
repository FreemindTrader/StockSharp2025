<UserControl x:Class="StockSharp.Studio.Controls.OptionFilterPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:propertyGrid="http://schemas.stocksharp.com/xaml"
             xmlns:loc="clr-namespace:StockSharp.Localization;assembly=StockSharp.Localization"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
             xmlns:xaml="clr-namespace:Ecng.Xaml;assembly=StockSharp.Xaml"
             xmlns:controls="clr-namespace:StockSharp.Studio.Controls">
  <FrameworkElement.Resources>
    <controls:ExpirDateToStringConverter x:Key="expirConverter"/>
  </FrameworkElement.Resources>
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="5"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="5"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    <Grid>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto"/>
        <ColumnDefinition Width="5"/>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="5"/>
        <ColumnDefinition Width="Auto"/>
        <ColumnDefinition Width="5"/>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="5"/>
        <ColumnDefinition Width="Auto"/>
        <ColumnDefinition Width="5"/>
        <ColumnDefinition Width="Auto"/>
        <ColumnDefinition Width="5"/>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="5"/>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="5"/>
        <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>
      <TextBlock Grid.Column="0" VerticalAlignment="Center">
        <Run Text="{x:Static loc:LocalizedStrings.UnderlyingAsset}"/>
        :
      </TextBlock>
      <propertyGrid:SecurityEditor EditValueChanged="UnderlyingAssetCtrl_OnSecuritySelected" x:Name="UnderlyingAssetCtrl"
                                   Grid.Column="2" ToolTip="{x:Static loc:LocalizedStrings.UnderlyingAsset}"/>
      <TextBlock Grid.Column="4" VerticalAlignment="Center">
        <Run Text="{x:Static loc:LocalizedStrings.ExpiryDate}"/>
        :
      </TextBlock>
      <dxe:ComboBoxEdit EditValueChanged="OnEditValueChanged" x:Name="ExpiryDateComboCtrl" Grid.Column="6"
                        IsTextEditable="False" DisplayTextConverter="{StaticResource expirConverter}"
                        ToolTip="{x:Static loc:LocalizedStrings.XamlStr810}" BorderThickness="0">
        <dxe:ButtonEdit.Buttons>
          <dxe:ButtonInfo Click="ClearDateButton_Click" GlyphKind="Cancel"/>
        </dxe:ButtonEdit.Buttons>
        <dxe:LookUpEditBase.ItemTemplate>
          <DataTemplate>
            <TextBlock Text="{Binding ., Converter={StaticResource expirConverter}}"/>
          </DataTemplate>
        </dxe:LookUpEditBase.ItemTemplate>
      </dxe:ComboBoxEdit>
      <CheckBox Click="UseBlackModelCtrl_OnClick" x:Name="UseBlackModelCtrl" Grid.Column="8"
                VerticalAlignment="Center">
        <TextBlock Text="{x:Static loc:LocalizedStrings.BlackModel}"/>
      </CheckBox>
      <TextBlock Grid.Column="10" VerticalAlignment="Center">
        <Run Text="{x:Static loc:LocalizedStrings.StrikeRange}"/>
        :
      </TextBlock>
      <dxe:SpinEdit EditValueChanged="OnEditValueChanged" x:Name="MinStrikeCtrl" IsFloatValue="True" Grid.Column="12"
                    ToolTip="{x:Static loc:LocalizedStrings.XamlStr809}" MinValue="0" AllowNullInput="True"/>
      <dxe:SpinEdit EditValueChanged="OnEditValueChanged" x:Name="MaxStrikeCtrl" IsFloatValue="True" Grid.Column="14"
                    ToolTip="{x:Static loc:LocalizedStrings.XamlStr808}" MinValue="0" AllowNullInput="True"/>
      <dx:SimpleButton Click="SelectOptions_OnClick" x:Name="SelectOptions" Grid.Column="16"/>
    </Grid>
    <Grid Row="2">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="Auto"/>
        <ColumnDefinition Width="5"/>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="5"/>
        <ColumnDefinition Width="Auto"/>
        <ColumnDefinition Width="5"/>
        <ColumnDefinition Width="Auto"/>
      </Grid.ColumnDefinitions>
      <Grid.RowDefinitions>
        <RowDefinition Height="*"/>
        <RowDefinition Height="5"/>
        <RowDefinition Height="*"/>
      </Grid.RowDefinitions>
      <TextBlock VerticalAlignment="Center" Grid.Row="0" Grid.Column="0">
        <Run Text="{x:Static loc:LocalizedStrings.AssetPrice}"/>
        :
      </TextBlock>
      <Slider ValueChanged="AssetPriceModified_OnValueChanged" x:Name="AssetPriceModified"
              ToolTip="{x:Static loc:LocalizedStrings.XamlStr309}" Grid.Column="2" Grid.Row="0"
              IsSnapToTickEnabled="True" TickPlacement="BottomRight" Minimum="0" Maximum="100"/>
      <dxe:SpinEdit EditValueChanged="AssetPriceCtrl_OnEditValueChanged" x:Name="AssetPriceCtrl" IsFloatValue="True"
                    Grid.Column="4" Grid.Row="0" ToolTip="{x:Static loc:LocalizedStrings.Str2468}" MinValue="0"
                    AllowNullInput="True"/>
      <dx:SimpleButton Click="AssetPriceReset_OnClick" x:Name="AssetPriceReset"
                       ToolTip="{x:Static loc:LocalizedStrings.XamlStr629}" Grid.Column="6" Grid.Row="0" MinWidth="100"
                       IsEnabled="False">
        <TextBlock Text="{x:Static loc:LocalizedStrings.XamlStr440}"/>
      </dx:SimpleButton>
      <TextBlock VerticalAlignment="Center" Grid.Row="2" Grid.Column="0">
        <Run Text="{x:Static loc:LocalizedStrings.XamlStr739}"/>
      </TextBlock>
      <Slider ValueChanged="CurrentDateModified_OnValueChanged" x:Name="CurrentDateModified"
              ToolTip="{x:Static loc:LocalizedStrings.XamlStr308}" Grid.Column="2" Grid.Row="2"
              IsSnapToTickEnabled="True" TickPlacement="BottomRight" Minimum="0" Maximum="100"/>
      <dxe:DateEdit EditValueChanged="CurrentDateCtrl_OnEditValueChanged" x:Name="CurrentDateCtrl" Grid.Column="4"
                    Grid.Row="2" Width="120" ToolTip="{x:Static loc:LocalizedStrings.XamlStr310}" AllowNullInput="True"
                    BorderThickness="0" NullValue="{x:Null}"/>
      <dx:SimpleButton Click="CurrentDateReset_OnClick" x:Name="CurrentDateReset"
                       ToolTip="{x:Static loc:LocalizedStrings.XamlStr628}" Grid.Column="6" Grid.Row="2" MinWidth="100"
                       IsEnabled="False">
        <TextBlock Text="{x:Static loc:LocalizedStrings.XamlStr440}"/>
      </dx:SimpleButton>
    </Grid>
  </Grid>
</UserControl>