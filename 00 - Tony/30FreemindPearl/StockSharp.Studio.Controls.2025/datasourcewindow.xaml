<dx:ThemedWindow x:Class="StockSharp.Studio.Controls.DataSourceWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:sx="http://schemas.stocksharp.com/xaml"
                 xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                 xmlns:local="clr-namespace:StockSharp.Studio.Controls"
                 Height="230" Width="300" WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
                 ShowInTaskbar="False" Title="{sx:Localization Sources}">
  <UIElement.CommandBindings>
    <CommandBinding CanExecute="OkCommand_OnCanExecute" Executed="OkCommand_OnExecuted"
                    Command="{x:Static local:DataSourceWindow.OkCommand}"/>
  </UIElement.CommandBindings>
  <Grid Margin="5">
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="5"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    <sx:DataSourcePanel x:Name="DataSourcePanel" Grid.Row="0" Grid.Column="0"/>
    <dx:SimpleButton x:Name="Ok" IsDefault="True" Grid.Row="2" Grid.Column="0" Width="70"
                     Command="{x:Static local:DataSourceWindow.OkCommand}" Content="{sx:Localization OK}"/>
  </Grid>
</dx:ThemedWindow>