<controls:BaseSubscriptionStudioControl x:Class="StockSharp.Studio.Controls.Level1Panel"
                                        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                                        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                                        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                                        xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
                                        xmlns:sx="http://schemas.stocksharp.com/xaml"
                                        xmlns:controls="clr-namespace:StockSharp.Studio.Controls">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    <dxb:BarManager x:Name="BarManager" Grid.Row="0">
      <dxb:BarManager.Bars>
        <dxb:Bar Caption="{sx:Localization Main}">
          <dxb:BarButtonItem ItemClick="Filter_OnClick" ToolTipService.ShowOnDisabled="True" ToolTip="{sx:Localization Filter}"
                             Glyph="{sx:ThemedIcons Key=Filter}"/>
        </dxb:Bar>
      </dxb:BarManager.Bars>
    </dxb:BarManager>
    <sx:Level1Grid x:Name="Level1Grid" Grid.Row="1"/>
  </Grid>
</controls:BaseSubscriptionStudioControl>