<local:BaseStudioControl x:Class="StockSharp.Studio.Controls.Level2Panel"
                         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                         xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                         xmlns:sx="http://schemas.stocksharp.com/xaml"
                         xmlns:local="clr-namespace:StockSharp.Studio.Controls">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto"/>
      <ColumnDefinition/>
    </Grid.ColumnDefinitions>
    <StackPanel Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,0,0,2">
      <TextBlock VerticalAlignment="Center" Text="{sx:Localization Security}"/>
      <sx:SecurityEditor x:Name="SecurityPicker" Width="150"/>
    </StackPanel>
    <sx:SecurityGrid x:Name="SecurityAsksGrid" Grid.Column="0" Grid.Row="1" BorderThickness="0"/>
    <sx:SecurityGrid x:Name="SecurityBidsGrid" Grid.Column="1" Grid.Row="1" BorderThickness="0"/>
    <local:BuySellPanel x:Name="BuySellPanel" Grid.Row="2" Grid.ColumnSpan="2" Grid.Column="0" Margin="0,2,0,0"/>
  </Grid>
</local:BaseStudioControl>