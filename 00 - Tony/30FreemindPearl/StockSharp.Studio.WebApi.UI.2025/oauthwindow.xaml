<dx:ThemedWindow x:Class="StockSharp.Studio.Controls.OAuthWindow"
                 xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:sx="http://schemas.stocksharp.com/xaml"
                 ShowInTaskbar="False" SizeToContent="WidthAndHeight" Title="{sx:Localization Authorization}">
  <Grid Margin="5">
    <Grid.RowDefinitions>
      <RowDefinition Height="*" MinHeight="100"/>
      <RowDefinition Height="5"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    <TextBlock Grid.Row="0" Margin="20,0,20,0" FontSize="16" VerticalAlignment="Center"
               HorizontalAlignment="Center" Text="{sx:Localization OAuthStart}"/>
    <dx:SimpleButton Click="StartBtn_Click" x:Name="StartBtn" Grid.Row="2" Width="100" Content="{sx:Localization Start}"/>
  </Grid>
</dx:ThemedWindow>