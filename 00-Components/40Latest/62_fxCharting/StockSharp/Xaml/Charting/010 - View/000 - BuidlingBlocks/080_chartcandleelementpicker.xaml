<dx:ThemedWindow
    x:Class="StockSharp.Xaml.Charting.ChartCandleElementPicker"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:egXaml="clr-namespace:Ecng.Xaml;assembly=StockSharp.Xaml"
    xmlns:loc="clr-namespace:StockSharp.Xaml;assembly=StockSharp.Xaml"
    xmlns:local="clr-namespace:StockSharp.Xaml.Charting"
    ShowInTaskbar="False"
    SizeToContent="WidthAndHeight"
    Title="{loc:Localization SelectCandles}">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="5" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <egXaml:ComboBoxEditEx x:Name="ElementsCtrl" MinWidth="250" EditValueChanged="OnEditValueChanged"/>
        <dx:SimpleButton
            x:Name="Ok"
            Grid.Row="2"
            Width="100"
            Content="{loc:Localization OK}"
            egXaml:XamlHelper.DialogResult="True"
            IsDefault="true"
            IsEnabled="False" />
    </Grid>
</dx:ThemedWindow>


