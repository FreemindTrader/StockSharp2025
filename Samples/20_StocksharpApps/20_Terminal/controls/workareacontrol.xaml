<controls:BaseStudioControl x:Class="StockSharp.Terminal.Controls.WorkAreaControl"
                            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                            xmlns:controls="clr-namespace:StockSharp.Studio.Controls;assembly=StockSharp.Studio.Controls"
                            xmlns:dxdo="http://schemas.devexpress.com/winfx/2008/xaml/docking"
                            xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
                            DataContext="{Binding RelativeSource={RelativeSource Self}}">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    <dxb:ToolBarControl x:Name="ToolBar"/>
    <dxdo:DockLayoutManager x:Name="DockManager" Grid.Row="1" dxdo:RestoreLayoutOptions.RemoveOldPanels="False"
                            FloatingMode="Desktop" DockingStyle="VS2010">
      <dxdo:LayoutGroup/>
    </dxdo:DockLayoutManager>
  </Grid>
</controls:BaseStudioControl>